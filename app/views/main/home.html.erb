<div class="hero">
  <div class="hero-body container">
    <div class="title">
      Welcome, get your <%= Loan::RATE %>% <%= Loan::TERM / 12 %> month loan now!
    </div>

    <%= form_for Loan.new do %>
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Email" name="email">
        </div>
      </div>

      <input type="submit" class="button is-success" value="Sign Up">
    <% end %>
  </div>
</div>
